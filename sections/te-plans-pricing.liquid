{{ 'section-te-plans-pricing.css' | asset_url | stylesheet_tag }}

<div
  class="color--{{ section.settings.color_scheme }} te-section-container--full-width"
  data-section-type="{{ section.name }}"
  data-section-id="{{ section.id }}"
>

{% for block in section.blocks %}
  {% case block.type %}
    {% when 'product-selector--1'%}
      {% assign plan-1 = all_products[block.settings.plan-1] %}
    {% when 'product-selector--2'%}
      {% assign plan-2 = all_products[block.settings.plan-2] %}
    {% when 'product-selector--3'%}
      {% assign plan-3 = all_products[block.settings.plan-3] %}
  {% endcase %}
{% endfor %}

{% assign selected-plan = plan-2 %}
<p>Selected plan is: <strong>{{ selected-plan.title }}</strong></p>
{% comment %}
<p>{{ plan-1.title }}</p>
<p>{{ plan-2.title }}</p>
<p>{{ plan-3.title }}</p>
{% endcomment %}
  <div class="section--te-plans-pricing">
    <div class="plans-pricing__header-container">
      <div class="plans-pricing__titles">
        <h2>{{ section.settings['plans-pricing__title'] }}</h2>
        <h4>{{ section.settings['plans-pricing__subtitle'] }}</h4>
      </div>
      <div class="plans-pricing__tabs te_grid-container te_grid-container--3-col-auto"">
        <div id="plan-1__tab" class="plans-pricing__tab">
          <p>{{ section.settings['variant-1__caption'] }}</p>
        </div>
        <div id="plan-2__tab" class="plans-pricing__tab">
          <p>{{ section.settings['variant-2__caption'] }}</p>
        </div>
        <div id="plan-3__tab" class="plans-pricing__tab">
          <p>{{ section.settings['variant-3__caption'] }}</p>
        </div>
      </div>
    </div>
    <div class="plans-pricing__card-container te_grid-container te_grid-container--3-col-auto">

        <div id="plan-1__card" class="plans-pricing__product-card">
          <div class="product-card__header">
            <p>{{ selected-plan.variants[0].title }}</p>
            <p>{{ selected-plan.variants[0].price | money}}</p>
            <p>{{ section.settings.variant-1__blurb }}</p>
            <p>product information goes here</p>
          </div>

          <div class="product-card__features">
            <p>{{ section.settings.variant-1__includes }}</p>
            <p>{{ section.settings.variant-1__feat-1}}</p>
            <p>{{ section.settings.variant-1__feat-2}}</p>
            <p>{{ section.settings.variant-1__feat-3}}</p>
          </div>
        </div>

        <div id="plan-2__card" class="plans-pricing__product-card">
          <div class="product-card__header">
            <p>{{ selected-plan.variants[1].title }}</p>
            <p>{{ selected-plan.variants[1].price | money}}</p>
            <p>{{ section.settings.variant-2__blurb }}</p>
            <p>product information goes here</p>
          </div>
          
          <div class="product-card__features">
            <p>{{ section.settings.variant-2__includes }}</p>
            <p>{{ section.settings.variant-2__feat-1}}</p>
            <p>{{ section.settings.variant-2__feat-2}}</p>
            <p>{{ section.settings.variant-2__feat-3}}</p>
          </div>
        </div>

        <div id="plan-3__card" class="plans-pricing__product-card">
          <div class="product-card__header">
            <p>{{ selected-plan.variants[2].title }}</p>
            <p>{{ selected-plan.variants[2].price | money}}</p>
            <p>{{ section.settings.variant-3__blurb }}</p>
            <p>product information goes here</p>
          </div>
          
          <div class="product-card__features">
            <p>{{ section.settings.variant-3__includes }}</p>
            <p>{{ section.settings.variant-3__feat-1}}</p>
            <p>{{ section.settings.variant-3__feat-2}}</p>
            <p>{{ section.settings.variant-3__feat-3}}</p>
          </div>
        </div>


    </div>
  </div>
</div>

