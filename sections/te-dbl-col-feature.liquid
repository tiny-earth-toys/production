<noscript>{{ 'section-te-dbl-col-feature.css' | asset_url | stylesheet_tag }}</noscript>

<div
  class="color--{{ section.settings.color_scheme }} te-section-container--full-width"
  data-section-type="{{ section.settings.name }}"
  data-section-id="{{ section.id }}"
>
  <div class="section--te-double-column-container">
    <div class="double-column__header--container">
      <div class="double-column__header--titles">
        {%- unless section.settings.subtitle == blank -%}
          <h3 class="te-text te-text--md te-weight--text-semibold">{{ section.settings.subtitle }}</h3>
        {%- endunless -%}
        {%- unless section.settings.title == blank -%}
          <h2 class="te-display te-display--med te-weight--display-semibold">{{ section.settings.title }}</h2>
        {%- endunless -%}
      </div>
      {%- unless section.settings.caption == blank -%}
        <div class="header--caption">
          <h5 class="te-text te-text--xl te-weight--text-normal">{{ section.settings.caption }}</h5>
        </div>
      {%- endunless -%}
    </div>
    <div class="double-column__content-container">
      {%- for block in section.blocks -%}
        {%- case block.type -%}
            <!-- -----   column text block   ------- -->

          {%- when 'column__text' -%}
            <div class="double-column__block-container column__text-container" {{ block.shopify_attributes }}>
              <p class="te-text te-text--lg te-weight--text-normal">{{ block.settings.column__textarea }}</p>
            </div>

            <!-- -----   end column text   ---------- -->
            <!-- -----   column image block   ------- -->

          {%- when 'column__image' -%}
            <div class="column__image-container" {{ block.shopify_attributes }}>
              <p>image block</p>
              <img src="{{ block.settings.column__image }}">
            </div>

            <!-- ----   end column image   ------- -->
            <!-- ----  column bullet block ------- -->

          {%- when 'column__bullet' -%}
            {%- assign first-bullet = block.settings['bullet__title-1'] -%}
            {%- assign second-bullet = block.settings['bullet__title-2'] -%}
            {%- assign third-bullet = block.settings['bullet__title-3'] -%}

            <div class="column__bullet-container" {{ block.shopify_attributes }}>
              {%- unless first-bullet == blank -%}
                {% capture icon %}{{ block.settings.bullet__icon-1 }}{% endcapture %}
                <div class="column__bullet-content-container">
                  <p>first bullet</p>
                  <div class="column__bullet-icon-wrapper {% if block.settings.bullet__show-icon-1 != true %}hidden{% endif %}">
                    {%- if icon == 'option_a' -%}
                      {%- render 'icon-triangle-block' -%}
                    {%- elsif icon == 'option_b' -%}
                      {%- render 'icon-star-block' -%}
                    {%- elsif icon == 'option_c' -%}
                      {%- render 'icon-octagon-block' -%}
                    {%- else -%}
                      {%- render 'icon-hexagon-block' -%}
                    {%- endif -%}
                  </div>
                  <h5>{{ block.settings['bullet__title-1'] }}</h5>
                  <p>{{ block.settings['bullet__message-1'] }}</p>
                </div>
              {%- endunless -%}

              {%- unless second-bullet == blank -%}
                {% capture icon %}{{ block.settings.bullet__icon-2 }}{% endcapture %}
                <div class="column__bullet-content-container">
                  <p>first bullet</p>
                  <div class="column__bullet-icon-wrapper {% if block.settings.bullet__show-icon-2 != true %}hidden{% endif %}">
                    {%- if icon == 'option_a' -%}
                      {%- render 'icon-triangle-block' -%}
                    {%- elsif icon == 'option_b' -%}
                      {%- render 'icon-star-block' -%}
                    {%- elsif icon == 'option_c' -%}
                      {%- render 'icon-octagon-block' -%}
                    {%- else -%}
                      {%- render 'icon-hexagon-block' -%}
                    {%- endif -%}
                  </div>
                  <h5>{{ block.settings['bullet__title-2'] }}</h5>
                  <p>{{ block.settings['bullet__message-2'] }}</p>
                </div>
              {%- endunless -%}

              {%- unless third-bullet == blank -%}
                {% capture icon %}{{ block.settings.bullet__icon-3 }}{% endcapture %}
                <div class="column__bullet-content-container">
                  <p>first bullet</p>
                  <div class="column__bullet-icon-wrapper {% if block.settings.bullet__show-icon-3 != true %}hidden{% endif %}">
                    {%- if icon == 'option_a' -%}
                      {%- render 'icon-triangle-block' -%}
                    {%- elsif icon == 'option_b' -%}
                      {%- render 'icon-star-block' -%}
                    {%- elsif icon == 'option_c' -%}
                      {%- render 'icon-octagon-block' -%}
                    {%- else -%}
                      {%- render 'icon-hexagon-block' -%}
                    {%- endif -%}
                  </div>
                  <h5>{{ block.settings['bullet__title-3'] }}</h5>
                  <p>{{ block.settings['bullet__message-3'] }}</p>
                </div>
              {%- endunless -%}
            </div>

            <!-- ----  end column bullet  ------- -->
            <!-- ----  column title block  ------- -->

          {%- when 'column__title' -%}
            {%- assign icon = block.settings.title__icon -%}
            <div class="column__title-container">
              <p>title block</p>
              {%- if icon == 'option_a' -%}
                <div class="column__title-icon-wrapper">
                  {%- render 'icon-triangle-block' -%}
                </div>
              {%- elsif icon == 'option_b' -%}
                <div class="column__title-icon-wrapper">
                  {%- render 'icon-star-block' -%}
                </div>
              {%- elsif icon == 'option_c' -%}
                <div class="column__title-icon-wrapper">
                  {%- render 'icon-octagon-block' -%}
                </div>
              {%- else -%}
                <div class="column__title-icon-wrapper"></div>
              {%- endif -%}
              <h3>{{ block.settings.title__title }}</h3>
              <p>{{ block.settings.title__message }}</p>
            </div>

            <!-- ----  end column title  ------- -->
        {%- endcase -%}
      {%- endfor -%}
    </div>
  </div>
</div>

