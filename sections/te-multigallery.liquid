  "name": "TE Multi Gallery",
  "tag": "section",
  "class": "te-section-container",
  "settings": [
    {
      "type": "select",
      "id": "color_scheme",
      "options": [
        {
          "value": "te-default",
          "label": "t:sections.all.colors.te-color-default.label"
        },
        {
          "value": "te-cream-dark",
          "label": "t:sections.all.colors.te-color-cream-dark.label"
        },
        {
          "value": "te-teal-light",
          "label": "t:sections.all.colors.te-color-teal-light.label"
        },
        {
          "value": "te-teal-dark",
          "label": "t:sections.all.colors.te-color-teal-dark.label"
        },
        {
          "value": "te-silver-light",
          "label": "t:sections.all.colors.te-color-silver-light.label"
        },
        {
          "value": "te-silver-dark",
          "label": "t:sections.all.colors.te-color-silver-dark.label"
        },
        {
          "value": "te-black-white",
          "label": "t:sections.all.colors.te-color-black-white.label"
        }
      ],
      "default": "te-default",
      "label": "t:sections.all.colors.label"
    },
    {
      "type": "text",
      "id": "multigallery_section_heading",
      "label": "Section title",
      "default": "Educator curated toys that grow with your child"
    },
    {
      "type": "textarea",
      "id": "multigallery_section_subtitle",
      "label": "Section subtitle",
      "default": "Vestibulum porta finibus nunc eget feugiat. Maecenas sagittis quam sit amet nisi vestibulum."
    }
  ],
  "blocks": [
    {
      "type": "multigroup",
      "name": "Grouping",
      "limit": 7,
      "settings": [
        {
          "type": "text",
          "id": "multigroup_name",
          "default": "12-18 months",
          "label": "Age Group"
        },
        {
          "type": "image_picker",
          "id": "multigroup_image_1",
          "label": "Image 1"
        },
        {
          "type": "image_picker",
          "id": "multigroup_image_2",
          "label": "Image 2"
        },
        {
          "type": "image_picker",
          "id": "multigroup_image_3",
          "label": "Image 3"
        },
        {
          "type": "image_picker",
          "id": "multigroup_image_4",
          "label": "Image 4"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "TE Multi Gallery",
      "blocks": [
        {
          "type": "multigroup"
        },
        {
          "type": "multigroup"
        },
        {
          "type": "multigroup"
        },
        {
          "type": "multigroup"
        },
        {
          "type": "multigroup"
        },
        {
          "type": "multigroup"
        },
        {
          "type": "multigroup"
        }
      ]
    }
  ]
}
{% endschema %}
