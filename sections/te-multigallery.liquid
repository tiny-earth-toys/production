<link rel="stylesheet" href="{{ 'section-te-multigallery.css' | asset_url }}" media="print" onload="this.media='all'">

<noscript>{{ 'section-te-multigallery.css' | asset_url | stylesheet_tag }}</noscript>

{% for block in section.blocks %}
  {% capture group_name %}
    {{ block.settings.multigroup_name }}
  {% endcapture %}
  <!-- <h2>{{ group_name }}</h2> -->
{% endfor %}

{% capture selected_block %}
  none-selected
{% endcapture %}
<!-- <h2>{{ selected_block }}</h2> -->

<div
  class="color--{{ section.settings.color_scheme }} te-section-container--full-width"
  data-section-type="{{ section.settings.name }}"
  data-section-id="{{ section.id }}"
>
  <div class=" section--te-multigallery">
    <div class="te-multigallery-container">
      <div class="mtc-content-headings-container">
        <h3 class="mtc-content-title te-display-xl te-display--bold">
          {{ section.settings.multigallery_section_heading }}
        </h3>
        <p class="mtc-content-subtitle ">
          {{ section.settings.multigallery_section_subtitle }}
        </p>
      </div>
    </div>
  </div>
  <div class="multi-gallery-container">
    {% for block in section.blocks %}
      <div
        id="{{ block.id }}"
        class="mgc--img-container hidden"
        data-block-type="tet-custom"
        data-block-id="{{ block.id }}"
      >
        <div class="mg-image-wrapper mg-image-wrapper--1">
          <img
            src="{{ block.settings.multigroup_image_1 | image_url: width: 480 }}"
            sizes="(min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 | divided_by: 2 }}px, (min-width: 750px) calc((100vw - 130px) / 2), calc((100vw - 50px) / 2)"
            alt="{{ block.settings.image.alt | escape }}"
            loading="lazy"
            width="480"
            height="384"
          >
        </div>
        <div class="mg-image-wrapper mg-image-wrapper--2">
          <img
            src="{{ block.settings.multigroup_image_2 | image_url: width: 480 }}"
            sizes="(min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 | divided_by: 2 }}px, (min-width: 750px) calc((100vw - 130px) / 2), calc((100vw - 50px) / 2)"
            alt="{{ block.settings.image.alt | escape }}"
            loading="lazy"
            width="480"
            height="384"
          >
        </div>
        <div class="mg-image-wrapper mg-image-wrapper--3">
          <img
            src="{{ block.settings.multigroup_image_3 | image_url: width: 480 }}"
            sizes="(min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 | divided_by: 2 }}px, (min-width: 750px) calc((100vw - 130px) / 2), calc((100vw - 50px) / 2)"
            alt="{{ block.settings.image.alt | escape }}"
            loading="lazy"
            width="480"
            height="384"
          >
        </div>
        <div class="mg-image-wrapper mg-image-wrapper--4">
          <img
            src="{{ block.settings.multigroup_image_4 | image_url: width: 480 }}"
            sizes="(min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 | divided_by: 2 }}px, (min-width: 750px) calc((100vw - 130px) / 2), calc((100vw - 50px) / 2)"
            alt="{{ block.settings.image.alt | escape }}"
            loading="lazy"
            width="480"
            height="384"
          >
        </div>
      </div>
    {% endfor %}

    <div class="mgc--btn-container">
      {% for block in section.blocks %}
        <button id="{{ block.id }}" type="button" class="te-button mg-btn">
          {{ block.settings.multigroup_name }}
        </button>
      {% endfor %}
    </div>
  </div>
</div>

<script></script>

